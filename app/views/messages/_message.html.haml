.contents__main__messages{"data-message-id": "#{message.id}"}
  .contents__main__messages__texts
    .contents__main__messages__texts-1
      = message.user.name
    .contents__main__messages__texts-2
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?